<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_left1"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/appicon_73"/>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#ddd"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_left2"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:background="#DDD"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/shape_gray_oval"/>

        <ImageView
            android:id="@+id/iv_last_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#DDD"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="具体内容"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="2015-11-26"
            android:textColor="#666"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/iv_last_line1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_grayline_tracking"/>
    </LinearLayout>
</LinearLayout>